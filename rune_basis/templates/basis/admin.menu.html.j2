{% extends 'admin.base.html.j2' %}
{% import "bootstrap/wtf.html" as wtf %}


{% block appcontent %}
<ul class="text-monospace">
  {% for item in current_menu.children recursive %}
    
    <li>
        {{ loop.depth }}
      | {{ item.order }}
      | {{ item.text }}
      | {{ item.url }}
      | {{ item.visible }}
      | {{ item.pagemenu() if item.pagemenu is defined else 'N/A' }}
      | {{ item.parent.name or 'N/P' }}
        <ul>
          {{ loop(item.children) }}
        </ul>
    </li>
  {% endfor %}
</ul>
{% endblock %}
